@model LogAndReg.Models.User
<div>
    <span asp-validation-for="FirstName"></span>
    <span asp-validation-for="LastName"></span>
    <span asp-validation-for="Email"></span>
    <span asp-validation-for="Password"></span>
    <span asp-validation-for="ConfirmPassword"></span>
</div>
<form asp-action="Register" asp-controller="Home" method="Post">
<div>
    <label aps-for="FirstName"></label>
    <input asp-for="FirstName">
</div>
<div>
    <label aps-for="LastName"></label>
    <input asp-for="LastName">
</div>
<div>
    <label aps-for="Email"></label>
    <input asp-for="Email">
</div>
<div>
    <label aps-for="Password"></label>
    <input asp-for="Password">
</div>
<div>
    <label aps-for="ConfirmPassword"></label>
    <input asp-for="ConfirmPassword">
</div>
<div>
    <input type="submit" value="REGISTER">
</div>
</form>